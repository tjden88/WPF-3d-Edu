<Window x:Class="WPF_3d_Edu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_3d_Edu"
        xmlns:dTools="clr-namespace:_3DTools;assembly=3DTools"
        mc:Ignorable="d"
        Topmost="True"
        Title="MainWindow" Height="450" Width="800" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <local:Detal x:Key="Detal"/>
    </Window.Resources>
    <Border Margin="5" BorderBrush="Black" BorderThickness="1">
        <dTools:TrackballDecorator>
        <Viewport3D>
            <!--Камера-->
            <Viewport3D.Camera>
                <PerspectiveCamera
                    FarPlaneDistance="200"
                    LookDirection="10,3,-3"
                    UpDirection="0,1,0"
                    NearPlaneDistance="1"
                    Position="-100,-10,60"
                    FieldOfView="70">
                </PerspectiveCamera>
            </Viewport3D.Camera>

            <!--Источник света-->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="White" Direction="-2,-3,-1" />
                </ModelVisual3D.Content>
            </ModelVisual3D>
            <!--Источник света-->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="White" Direction="2,3,1" />
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <ModelVisual3D Content="{Binding Model }">
            </ModelVisual3D>
        </Viewport3D>
</dTools:TrackballDecorator>
    </Border>
</Window>
